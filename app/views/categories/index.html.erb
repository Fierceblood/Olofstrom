<div class="row">

    <!--    RUBRIK  -->
    <div class="large-6 columns first">
      <h1>Övningar</h1>
    </div>

    <!--  LÄGG TILL MODUL KNAPP -->
    <div class="large-6 columns first">
      <%= link_to '<div class="add-mod-btn ease"><p>Lägg till modul</p></div>'.html_safe, new_category_path %>
    </div>
  </div>

    <div class="medium-6 large-4 columns">
      <div class="panel feed">
        <p>

          <% @activities.each do |activity| %>

            <%= activity.owner.name %>
            <%= activity.trackable.id %>

              <%= link_to image_tag(activity.owner.image).html_safe, session_path(activity.owner) %>
            <strong><%=link_to activity.owner.name, session_path(activity.owner) %></strong>
              <%= activity.key.html_safe %><br>
          <% end %>

        </p>

  <!-- MODULER -->
  <div class="large-12 columns contents">
    <div class="row">
      <% @categories.each_with_index do |cat, index| %>
      <div class="large-6 columns modu">
        <a href="<%= category_path(cat.name) %>">
          <%= link_to image_tag(@images[index % 4]).html_safe, category_path(cat.name) %>
        <div class="text">
          <h1><%= cat.name.titleize %></h1>
          <p><%= cat.desc %></p> 
        </div></a>
        <div class="crud"><%= link_to '<i class="fi-x small"></i>'.html_safe, delete_category_path(cat.name), method: :delete, data: { confirm: 'Are you sure?' } %>
          <%= link_to '<i class="fi-pencil small"></i>'.html_safe, edit_caturl_path(cat.name), method: :get %></div>
      </div>
      <% end %>
    </div>
</div>
  </div>

