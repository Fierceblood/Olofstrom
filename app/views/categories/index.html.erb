<p id="notice"><%= notice %></p>

<h1>Listing Categories</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Desc</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.name.titleize %></td>
        <td><%= category.desc %></td>
        <td><%= link_to 'Show', caturl_path(category.name) %></td>
        <td><%= link_to 'Edit', edit_caturl_path(category.name) %></td>
        <td><%= link_to 'Destroy', caturl_path(category.name), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Category', new_category_path %>
