<%= include_gon %>

<div class="row">

    <!--  TOPBAR -->
    <div class="medium-12 large-12 columns topbar">
      <div class="input-search left"> 
        <%= text_field_tag :query, params[:query], class: "form-control", id: "user_search", autocomplete: "on" %>
                      <%= form_tag search_path, class: "form-inline", method: :get do %>

<!--<div class="input-group-btn ease"> <%= submit_tag 'sök' %></div>-->
        <% end %>
      </div>
     

      
      <div class="bread left">START > MODULER > Steg 2</div>
      <% if current_user.admin? %>
      <button id="examination_toggle" class="button redbtn ease right">Lägg till examination</button>
      <button id="step_toggle" class="button redbtn ease right">Lägg till steg</button>
      <% end %>
    </div>
    <div class="step_form">
      <%= render :partial => '/steps/steps' %>
    </div>
    <div class="examination_form">
      <%= render '/examinations/form' %>
    </div>

    <!--    RUBRIK  -->
    

  </div>
  <p id="notice"><%= notice %></p>
<div class="row">
 <div class="large-12 columns">
  <div class="large-12 columns headline">
    <h3><%= @category.name %></h3>
  </div>

<div class="large-8 columns">
  
<div id="steps">
    <% @steps.each do |s| %>
        <% if s.name? %>
        <div id="step_<%= s.id %>" class="large-12 columns step-comp step">
          <h2><%= link_to s.name, step_path(:category_name => params[:category_name], :step_name => s.name) %></h2>
          <% if current_user.admin? %>
              <%= link_to '<i class="fi-x"></i>'.html_safe, delete_step_path(:category_name => params[:category_name], :step_name => s.name), method: :delete, data: { confirm: 'Are you sure?' } %>
              <%= link_to '<i class="fi-pencil"></i>'.html_safe, edit_step_path(:category_name => params[:category_name], :step_name => s.name), method: :get %>
          <% end %>
          <div class="step-bottom"><p>25% avklarad</p></div>
          </div><p></p>
        <% end %>
    <% end %>
</div>
</div>
<div class="large-4 columns form-style">
  <h4>Kommentarer</h4>
  <button id="comment_toggle" class="button form-btn">Kommentera</button>
<div class="comment_form">
  <%= render :partial => '/comments/form', :locals => {:position => @comments.length+1 } %>
</div>
<% @comments.each do |x,y| %>
       <div class="comments-container">
     <% if x.parent_id == nil %>
             <div class="comments">
               <% if @user %>
                   <br> <strong><%= @user.name %></strong><br>
               <% end %>
               <%= x.msg %>
               <% if Comment.where({parent_id: x.id}).first %>
                <div id="answer-btn" class="answer-btn right"><i class="fa fa-plus"></i></div>
               <% end %>
               <hr>
             </div>
         <% end %>
         <% @commentsxx.each do |c, z| %>
            <% if z.parent_id == x.id  %>
                   <% if z.parent_id %>
                     <div class="replies" id="replies">
                       <% if @user %>
                           <br> <strong><%= @user.name %></strong><br>
                       <% end %>
                  <%= z.msg %>
                  <hr>
                       <% end %>
                 </div>
               <% end %>
         <% end %>
         <% if x.parent_id == nil %>
             <button id="reply_toggle" class="button form-btn tiny">Svara</button>
             <div id="reply_form">
               <%= render :partial => '/comments/reply', :locals => {:parent_id => x.id, :position => 0}  %>
             </div>
         <% end %>
       </div>
<% end %>

</div>
</div>
</div>

<% @examinations.each do |e| %>
    <%= e.name %><br>
    <%= e.desc %>
<% end %>
<br>


