<div class="row">
  <div class="row">
	<div class="medium-12 large-12 columns headline"><h2><%= @user.name%></h2></div>
</div>
<div class="row panel admincontent">
	<div class="small-12 medium-12 large-12 columns">
		<div class="small-12 medium-3 large-3 columns admin-area">
			<div class="admin-avatar">

				<%= image_tag @user.image %>

			</div>
			<p><%= @user.name%></p>

		<%if (@user.admin)%>
			<p>Status: Admin</p>
		<%else%>
			<p>Status: Användare</p>
		<%end%>
		<p>Kommentarer: <% if @comments %><%= @comments.length %><% end %></p>
		<p>Senast inloggad: </p>

		  <%= mail_to @user.email do %>
			 <center> <i class='fa fa-envelope-o fa-2x'></i>&nbsp; Maila mig!</center>
			<% end %>


		</div>
		<div class="medium-9 large-9 columns">
			<div class="medium-3 large-3 columns tab-menu right">
			<a href="#"><div class="tab com-tab">Kommentarer</div></a>
			<a href="#"><div class="tab act-tab">Aktivitet</div></a>
			<a href="#"><div class="tab tabActive badge-tab active">Märken</div></a>
			</div>
			<div class="large-12 columns activity-content">
			<% @activities.each do |activity|%>
				<div class="activity">
					<%= link_to activity.owner.name, activity.owner if activity.owner%>
					<%= link_to activity.key.html_safe, activity.key%>
				</div>
				<br>
			<% end %>
			</div>
			<div class="large-12 columns comments-content">
			  <% if @comments %>
				  <% @comments.each do |x| %>
					  <% if x %>
						  <% cat = Category.find(x.category_id).name %>
						  <%= @user.name %> har kommenterat på <%= link_to cat, category_path(cat) %>: <%= x.msg %> - <%= x.created_at %>
					  <% end %>
					  <br>
				  <% end %>
			  <% end %>
			</div>
			<div class="large-12 columns badge-content">Badge
			<div class="badges-holder">
				<div class="goldbadge">
							<div class="bheadline"><h3>Teknisk kompetens</h3></div>
							<div class="bstep"><p>Steg-1</p></div>
						</div>
						<%= image_tag 'badgegold.png', class: 'ease' %>
						<%= image_tag 'badge_yo.png', class: 'ease' %>
						<%= image_tag 'badgeblue.png', class: 'ease' %>
						<%= image_tag 'badgepink.png', class: 'ease' %>
						<%= image_tag 'badgeorange.png', class: 'ease' %>
						<%= image_tag 'badgegreen.png', class: 'ease' %>
					</div>
			</div>
		</div>
	</div>
</div>
